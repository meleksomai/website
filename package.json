{
  "name": "thugga",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "syncpack": "npx syncpack fix-mismatches",
    "ci:install": "pnpm install --no-frozen-lockfile"
  },
  "devDependencies": {
    "eslint-config-thugga": "0.0.0",
    "prettier": "^2.7.1",
    "syncpack": "^8.2.4",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.5.2"
}
